# ===========================================
# API Keys (Required)
# ===========================================
SERPER_API_KEY=your_serper_api_key
FIRECRAWL_API_KEY=your_firecrawl_api_key
OPENAI_API_KEY=your_openai_api_key
GEMINI_API_KEY=your_gemini_api_key  # Optional

# ===========================================
# Server Configuration
# ===========================================
PORT=3000
NODE_ENV=development  # development, production, test

# ===========================================
# Authentication
# ===========================================
JWT_SECRET=change-this-to-a-secure-random-string
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password

# ===========================================
# LLM Settings
# ===========================================
DEFAULT_LLM_PROVIDER=openai  # openai, gemini
OPENAI_MODEL=gpt-5-mini  # gpt-5.2, gpt-5-mini, gpt-5-nano, gpt-4.1
GEMINI_MODEL=gemini-2.5-flash-lite
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7

# ===========================================
# Search Settings
# ===========================================
SEARCH_NUM_RESULTS=10
DEFAULT_GEO=us  # us, gb, de, se, etc.

# ===========================================
# Content Defaults
# ===========================================
# Language: en-US, en-GB, sv-SE, de-DE, fr-FR, es-ES, etc.
DEFAULT_LANGUAGE=en-US

# Tone: seo-optimized, professional, friendly, formal, casual, humorous, excited
DEFAULT_TONE=seo-optimized

# Article Size: shorter (2-3), short (3-5), medium (5-7), long (7-10), longer (10-12)
DEFAULT_ARTICLE_SIZE=medium

# Author Profile: seo-expert, professional-writer, friendly-blogger,
#                 academic-researcher, tech-explainer, sales-copywriter,
#                 swedish-seo, german-professional
# DEFAULT_AUTHOR_PROFILE=seo-expert

# ===========================================
# Performance & Reliability
# ===========================================
SCRAPING_CONCURRENCY=5
LLM_CONCURRENCY=3
MAX_RETRIES=3
RETRY_INITIAL_DELAY_MS=1000
RETRY_MAX_DELAY_MS=10000

# ===========================================
# Caching
# ===========================================
# Enable/disable caching (reduces API costs)
CACHE_ENABLED=true
# Cache TTL in days (SERP/pages may change over time)
CACHE_TTL_DAYS=7
# Path to SQLite database file
CACHE_DB_PATH=./data/cache.db

# ===========================================
# Vector Store (Supabase pgvector)
# ===========================================
# Supabase project URL and anonymous key
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key

# ===========================================
# Embedding Settings (Semantic Search)
# ===========================================
# Enable/disable vector embeddings for semantic search
EMBEDDING_ENABLED=false
# Chunk size in characters for text splitting
EMBEDDING_CHUNK_SIZE=512
# Overlap between chunks in characters
EMBEDDING_CHUNK_OVERLAP=50
# TTL for stored embeddings in days
EMBEDDING_TTL_DAYS=30
